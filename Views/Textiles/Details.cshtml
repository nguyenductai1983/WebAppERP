@model WebAppERP.Models.Textile

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Textile</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TextileType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TextileType.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Machine)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Machine.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Operator)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Operator.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActualWidth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActualWidth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InitialLength)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InitialLength)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GrossWeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GrossWeight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NetWeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NetWeight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quality)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quality)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created_at)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created_at)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Updated_at)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Updated_at)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <!-- ======================= GHI NHẬN TIÊU THỤ SỢI ======================= -->
    <hr />
    <h4>Ghi nhận Sợi đã sử dụng</h4>

    <!-- Hiển thị thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
<div class="alert alert-success">@TempData["SuccessMessage"]</div>}
    @if (TempData["ErrorMessage"] != null)
    {
<div class="alert alert-danger">@TempData["ErrorMessage"]</div>}

    <!-- Form thêm Sợi -->
    <div class="card card-body mb-4">
        <form asp-action="AddYarnUsage" method="post" class="row gx-3 align-items-end">
            <input type="hidden" name="textileId" value="@Model.ID" />
            <div class="col-md-5">
                <label for="yarnId" class="form-label">Chọn Lô Sợi (theo ID)</label>
                <select name="yarnId" class="form-select" asp-items="ViewBag.YarnId" required></select>
            </div>
            <div class="col-md-5">
                <label for="quantityUsed" class="form-label">Số lượng sử dụng (kg)</label>
                <input type="number" name="quantityUsed" class="form-control" value="1" min="0.01" step="0.01" required />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Ghi nhận</button>
            </div>
        </form>
    </div>

    <!-- Bảng danh sách Sợi đã sử dụng -->
    <h5>Danh sách Sợi đã sử dụng cho cây Vải này</h5>
    <table class="table table-sm">
        <thead class="table-light">
            <tr>
                <th>Lô Sợi #</th>
                <th>Loại Sợi</th>
                <th>Số lượng đã dùng (kg)</th>
                <th>Ngày sử dụng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usedYarn in (ViewBag.UsedYarns as List<TextileYarnUsage>))
            {
<tr>
    <td>@usedYarn.YarnId</td>    
    <td>@usedYarn.Yarn.Product.Name</td>
    <td>@usedYarn.UsageDate.ToString("dd/MM/yyyy")</td>
</tr>}
        </tbody>
    </table>
</div>
