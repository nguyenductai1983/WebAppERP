@model WebAppERP.Models.Textile

@{
    ViewData["Title"] = "Tạo Cây Vải mới";
}

<h1 class="display-6">@ViewData["Title"]</h1>
<p class="text-muted">Ghi nhận một bán thành phẩm Vải mới được dệt ra.</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Code" class="form-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SourceYarnId" class="form-label"></label>
                    @* SỬA LỖI TẠI ĐÂY: Dùng ViewData thay vì ViewBag *@
                    <select asp-for="SourceYarnId" class="form-select" asp-items="@(ViewData["SourceYarnId"] as SelectList)">
                        <option value="">-- Chọn lô Sợi đã sử dụng --</option>
                    </select>
                    <span asp-validation-for="SourceYarnId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="TextileTypeId" class="form-label"></label>
                    <select asp-for="TextileTypeId" class="form-select" asp-items="@(ViewData["TextileTypeId"] as SelectList)"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MachineId" class="form-label"></label>
                    <select asp-for="MachineId" class="form-select" asp-items="@(ViewData["MachineId"] as SelectList)"></select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="OperatorId" class="form-label"></label>
                    <select asp-for="OperatorId" class="form-select" asp-items="@(ViewData["OperatorId"] as SelectList)"></select>
                </div>
                <div class="col-md-6 mb-3 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Quality" />
                        <label class="form-check-label" asp-for="Quality"></label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 mb-3">
                    <label asp-for="ActualWidth" class="form-label"></label>
                    <input asp-for="ActualWidth" class="form-control" />
                    <span asp-validation-for="ActualWidth" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="InitialLength" class="form-label"></label>
                    <input asp-for="InitialLength" class="form-control" />
                    <span asp-validation-for="InitialLength" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="GrossWeight" class="form-label"></label>
                    <input asp-for="GrossWeight" class="form-control" />
                    <span asp-validation-for="GrossWeight" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="NetWeight" class="form-label"></label>
                    <input asp-for="NetWeight" class="form-control" />
                    <span asp-validation-for="NetWeight" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Tạo mới</button>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}