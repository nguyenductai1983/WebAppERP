@* THAY ĐỔI QUAN TRỌNG: Model bây giờ là MaterialRequisition *@
@model IEnumerable<WebAppERP.Models.MaterialRequisition>
@using WebAppERP.Models

@{
    ViewData["Title"] = "Yêu cầu Vật tư Chờ Xử lý";
}

<h1>@ViewData["Title"]</h1>
<p>Danh sách các yêu cầu lĩnh vật tư từ bộ phận sản xuất đang chờ kho xử lý.</p>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Mã Yêu cầu</th>
            <th>Lệnh Sản xuất</th>
            <th>Sản phẩm</th>
            <th>Phân xưởng Yêu cầu</th>
            <th>Ngày Yêu cầu</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>PL-@item.Id</td>
                <td>
                    <a asp-controller="WorkOrders" asp-action="Details" asp-route-id="@item.WorkOrderId">LSX-@item.WorkOrderId</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkOrder.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workshop.Name)
                </td>
                <td>
                    @item.RequestDate.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    <span class="badge bg-warning text-dark">@Html.DisplayFor(modelItem => item.Status)</span>
                </td>
                <td>
                    @* Link này sẽ dẫn đến trang chuẩn bị xuất kho *@
                    <a asp-controller="MaterialIssues" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-box-arrow-up-right me-1"></i>
                        Xử lý Xuất kho
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">Hiện không có yêu cầu vật tư nào đang chờ xử lý.</div>
}
