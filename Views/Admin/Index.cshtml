@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-primary" asp-action="ManageRoles" asp-route-userId="@user.Id">Quản lý Quyền</a>
                    <a class="btn btn-warning btn-sm" asp-action="ResetPassword" asp-route-userId="@user.Id">Reset Mật khẩu</a>
                </td>
            </tr>
        }
    </tbody>
</table>