@model PagedList.Core.IPagedList<WebAppERP.Models.Product>
@using PagedList.Core.Mvc
@using WebAppERP.Models

@{
    ViewData["Title"] = "Quản lý Sản phẩm & Kho";
}

<div class="card">
    <div class="card-header">
        <h1 class="display-6">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Tạo sản phẩm mới
            </a>
            <form asp-controller="Products" asp-action="Index" method="get" class="w-50">
                <div class="input-group">
                    <input type="text" name="SearchString" class="form-control" placeholder="Nhập tên sản phẩm để tìm..." value="@ViewData["CurrentFilter"]">
                    <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"> </i> Tìm</button>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                <i class="bi bi-arrow-down-up me-1"></i>Tên sản phẩm
                            </a>
                        </th>
                        <th>Mã SKU</th>
                        <th>Loại sản phẩm</th>
                        <th class="text-end">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                <i class="bi bi-arrow-down-up me-1"></i>Giá bán
                            </a>
                        </th>
                        <th class="text-end">Tồn kho</th>
                        <th style="width: 250px;" class="text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.Name)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Sku)</td>
                            <td>
                                @if (item.Type == ProductType.FinishedGood)
                                {
                                    <span class="badge bg-success">Thành phẩm</span>
                                }
                                else if (item.Type == ProductType.SemiFinishedGood)
                                {
                                    <span class="badge bg-warning text-dark">Bán thành phẩm</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Nguyên phụ liệu</span>
                                }
                            </td>
                            <td class="text-end">@item.Price.ToString("N0")</td>
                            <td class="text-end">@item.Quantity.ToString("N2") @item.UnitOfMeasure</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    @if (item.Type == ProductType.FinishedGood || item.Type == ProductType.SemiFinishedGood)
                                    {
                                        <a asp-action="ManageBOM" asp-route-id="@item.Id" class="btn btn-info" title="Quản lý Định mức">
                                            <i class="bi bi-card-checklist"></i> BOM
                                        </a>
                                    }
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary" title="Sửa">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Chi tiết">
                                        <i class="bi bi-info-circle"></i> Chi tiết
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <pager class="pager-container" list="@Model" asp-controller="Products" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]" />
        </div>
    </div>
</div>