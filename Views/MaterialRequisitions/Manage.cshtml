@model WebAppERP.Models.WorkOrder
@using WebAppERP.Models

@{
    ViewData["Title"] = "Quản lý Lĩnh Vật tư cho LSX #" + Model.Id;
    var pastRequisitions = ViewBag.PastRequisitions as List<MaterialRequisition>;
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Thông tin Lệnh sản xuất</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Sản phẩm</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>
        <dt class="col-sm-2">Số lượng cần sản xuất</dt>
        <dd class="col-sm-10">@Model.QuantityToProduce.ToString("N0")</dd>
        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

@* ================================================================= *@
@* ==> CẬP NHẬT KHỐI DIV NÀY <== *@
@* ================================================================= *@
<div class="my-3 d-flex flex-wrap">
    <a asp-action="Create" asp-route-workOrderId="@Model.Id" class="btn btn-primary me-2 mb-2">
        <i class="bi bi-plus-circle-fill me-2"></i>Tạo Phiếu Lĩnh Mới
    </a>
    <a asp-action="AwaitingConfirmation" asp-route-workOrderId="@Model.Id" class="btn btn-success me-2 mb-2">
        <i class="bi bi-box-arrow-in-down me-2"></i>Chờ Xác nhận Nhận
    </a>
    <a asp-controller="WorkOrders" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary mb-2">Quay lại Lệnh sản xuất</a>
</div>
@* ================================================================= *@

<hr />

<h4>Lịch sử các lần yêu cầu vật tư</h4>

@if (pastRequisitions != null && pastRequisitions.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Mã Phiếu</th>
                <th>Ngày Yêu cầu</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in pastRequisitions)
            {
                <tr>
                    <td>PL-@item.Id</td>
                    <td>@item.RequestDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.Status == RequisitionStatus.Pending)
                        {
                            <span class="badge bg-warning text-dark">@item.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.Status</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Chưa có yêu cầu lĩnh vật tư nào cho Lệnh sản xuất này.</p>
}
