@model WebAppERP.Models.SalesOrder

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().GsmOrGlm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().FabricWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetails.First().Meterage)
            </th>
            <th>
                Thành tiền
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @item.UnitPrice.ToString("N0")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GsmOrGlm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FabricWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meterage)
            </td>
            <td>
                @((item.Quantity * item.UnitPrice).ToString("N0"))
            </td>
            <td>
                <form asp-action="DeleteProductFromOrder" method="post" class="delete-form">
                    <input type="hidden" name="salesOrderDetailId" value="@item.Id" />
                    <input type="hidden" name="salesOrderId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7" class="text-right font-weight-bold">Tổng cộng</td>
            <td colspan="2" class="font-weight-bold">
                @Model.TotalAmount.ToString("N0") VND
            </td>
        </tr>
    </tfoot>
</table>