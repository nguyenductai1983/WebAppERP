@model WebAppERP.Models.Product

@{
    ViewData["Title"] = "Tạo mới Sản phẩm";
}

<h1 class="display-6">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select id="productType" asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<ProductType>()">
                    <option value="">-- Chọn loại sản phẩm --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group mb-3" id="defaultStageGroup" style="display:none;">
                <label asp-for="DefaultProductionStageId" class="control-label"></label>
                <select asp-for="DefaultProductionStageId" class="form-control" asp-items="ViewBag.ProductionStageId">
                    <option value="">-- Không áp dụng --</option>
                </select>
                <span asp-validation-for="DefaultProductionStageId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sku" class="form-label"></label>
                <input asp-for="Sku" class="form-control" />
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UnitOfMeasure" class="form-label"></label>
                <input asp-for="UnitOfMeasure" class="form-control" />
                <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" value="0" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div id="rawMaterialFields" style="display:none;">
                <div class="mb-3">
                    <label asp-for="Cost" class="form-label"></label>
                    <input asp-for="Cost" class="form-control" type="number" value="0" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
            </div>

            <div id="finishedGoodFields" style="display:none;">
                <div class="mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" type="number" value="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StandardLaborCost" class="form-label"></label>
                    <input asp-for="StandardLaborCost" class="form-control" type="number" value="0" />
                    <span asp-validation-for="StandardLaborCost" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StandardOverheadCost" class="form-label"></label>
                    <input asp-for="StandardOverheadCost" class="form-control" type="number" value="0" />
                    <span asp-validation-for="StandardOverheadCost" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            function toggleProductFields() {
                var selectedType = $('#productType').val();

                $('#finishedGoodFields').hide();
                $('#rawMaterialFields').hide();
                $('#defaultStageGroup').hide();

                // RawMaterial = 0, SemiFinishedGood = 1, FinishedGood = 2
                if (selectedType == '2') { // FinishedGood
                    $('#finishedGoodFields').show();
                } else if (selectedType == '0') { // RawMaterial
                    $('#rawMaterialFields').show();
                } else if (selectedType == '1') { // SemiFinishedGood
                    // Bán thành phẩm có cả chi phí sản xuất và có thể có giá bán
                    $('#finishedGoodFields').show();
                    $('#defaultStageGroup').show();
                }
            }

            toggleProductFields();
            $('#productType').on('change', function () {
                toggleProductFields();
            });
        });
    </script>
}