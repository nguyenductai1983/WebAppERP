@model IEnumerable<WebAppERP.Models.Product>
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Báo cáo Tồn Kho</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 14px;
        }

        .report-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
        }

        h1 {
            font-size: 24px;
            text-align: center;
        }

        table {
            width: 100%;
            line-height: inherit;
            text-align: left;
            border-collapse: collapse;
        }

            table td, table th {
                padding: 8px;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #f2f2f2;
            }
    </style>
</head>
<body>
    <div class="report-box">
        <h1>Báo cáo Tồn Kho</h1>
        <p style="text-align:center;">Ngày lập: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        <table>
            <thead>
                <tr>
                    <th>Mã SKU</th>
                    <th>Tên sản phẩm</th>
                    <th style="text-align:right;">Số lượng tồn</th>
                    <th style="text-align:right;">Giá bán</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Sku</td>
                        <td>@item.Name</td>
                        <td style="text-align:right;">@item.Quantity</td>
                        <td style="text-align:right;">@item.Price.ToString("N0") VND</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>