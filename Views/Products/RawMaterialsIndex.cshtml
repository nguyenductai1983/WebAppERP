@model PagedList.Core.IPagedList<WebAppERP.Models.Product>
@using PagedList.Core.Mvc;

@{
    ViewData["Title"] = "Quản lý Nguyên vật liệu";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" asp-route-type="@ProductType.RawMaterial" class="btn btn-primary">Tạo Nguyên vật liệu mới</a>
</p>

<form asp-controller="Products" asp-action="RawMaterialsIndex" method="get">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group mb-3">
                <input type="text" name="SearchString" class="form-control" placeholder="Nhập tên NVL để tìm..." value="@ViewData["CurrentFilter"]">
                <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>
                @* SỬA LẠI ACTION Ở ĐÂY *@
                <a asp-action="RawMaterialsIndex" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Tên Nguyên vật liệu</a>
            </th>
            <th>
                Mã SKU
            </th>
            <th>
                @* SỬA LẠI ACTION Ở ĐÂY *@
                <a asp-action="RawMaterialsIndex" asp-route-sortOrder="@ViewData["PriceSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Giá mua</a>
            </th>
            <th class="text-center">
                Số lượng tồn
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sku)
                </td>
                <td>
                    @item.Cost.ToString("N0") VND
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="text-end">
                    @* Bỏ nút ManageBOM vì đây là trang nguyên vật liệu *@
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    @* SỬA LẠI LỖI KHOẢNG TRẮNG Ở ĐÂY *@
    <pager class="pager-container" list="@Model" asp-controller="Products" asp-action="RawMaterialsIndex"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-currentFilter="@ViewData["CurrentFilter"]" />
</div>