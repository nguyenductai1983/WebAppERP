@model IEnumerable<WebAppERP.Models.MaterialIssue>
@using WebAppERP.Models

@{
    ViewData["Title"] = "Xác nhận Nhận Vật tư";
    var workOrderId = ViewBag.WorkOrderId;
}

<h1>@ViewData["Title"]</h1>
<p>Danh sách các phiếu xuất vật tư từ kho đang chờ phân xưởng xác nhận đã nhận.</p>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Mã Phiếu Xuất</th>
            <th>Ngày Xuất</th>
            <th>Người Xuất</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>PXK-@item.Id</td>
                <td>@item.IssuedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.IssuedBy?.UserName</td>
                <td><span class="badge bg-primary">@item.Status</span></td>
                <td>
                    @* Thêm link xem chi tiết phiếu xuất nếu cần *@
                    <form asp-action="ConfirmReceipt" method="post">
                        <input type="hidden" name="issueId" value="@item.Id" />
                        <input type="hidden" name="workOrderId" value="@workOrderId" />
                        <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Xác nhận đã nhận đủ hàng từ phiếu xuất này?')">
                            <i class="bi bi-check2-circle"></i> Xác nhận đã nhận
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">Không có phiếu xuất nào đang chờ xác nhận.</div>
}

<div class="mt-3">
    <a asp-action="Manage" asp-route-workOrderId="@workOrderId" class="btn btn-secondary">Quay lại trang quản lý</a>
</div>
