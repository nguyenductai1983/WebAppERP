@model WebAppERP.Models.ProductionLog

@{
    ViewData["Title"] = "Chỉnh sửa Ghi nhận Sản lượng";
    var routingInfo = ViewBag.RoutingInfo as WebAppERP.Models.WorkOrderRouting;
    var stageName = ViewBag.StageName as string;
    // Lấy dữ liệu thuộc tính đã giải mã từ ViewBag
    var attributes = ViewBag.Attributes;
}

<h1 class="display-6">@ViewData["Title"]</h1>
<hr />

<div class="alert alert-light border">
    <dl class="row mb-0">
        <dt class="col-sm-3">Lệnh sản xuất:</dt>
        <dd class="col-sm-9">#@routingInfo.WorkOrder.Id - @routingInfo.WorkOrder.Product.Name</dd>
        <dt class="col-sm-3">Công đoạn:</dt>
        <dd class="col-sm-9"><strong>@routingInfo.ProductionStage.Name</strong></dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="WorkOrderRoutingId" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LogDate" class="control-label"></label>
                    <input asp-for="LogDate" class="form-control" type="date" />
                    <span asp-validation-for="LogDate" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <h4>Thông tin chi tiết cho công đoạn: <strong>@stageName</strong></h4>

            @if (stageName == "Đùn Sợi")
            {
                var yarnAttr = attributes as WebAppERP.ViewModels.ProductionAttributes.YarnLogAttributes;
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label>Trọng lượng NW</label>
                        <input type="number" step="0.01" name="NetWeight" class="form-control" value="@yarnAttr?.NetWeight" required />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Trọng lượng GW</label>
                        <input type="number" step="0.01" name="GrossWeight" class="form-control" value="@yarnAttr?.GrossWeight" required />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label>Số ống sợi</label>
                        <input type="number" name="SpoolCount" class="form-control" value="@yarnAttr?.SpoolCount" required />
                    </div>
                </div>
            }
            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu thay đổi</button>
                <a asp-controller="WorkOrders" asp-action="Details" asp-route-id="@routingInfo.WorkOrderId" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>